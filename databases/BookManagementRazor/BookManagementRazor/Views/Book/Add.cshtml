@using BookManagementRazor.Dtos
@model BookDto

<h2>Add Book</h2>

@using (Html.BeginForm("Add", "Book", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Name)
        @Html.TextBoxFor(a => a.Name, "", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.AuthorId)
        @Html.DropDownListFor(a => a.AuthorId, new SelectList(@Model.Authors, "Id", "FullName"), "", new {@class = "form-control"} )
    </div>
        
    <input class="btn btn-primary" type="submit" value="Submit"/>
}